.panel-list-item {
  height: 45px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 15px;
  padding: 0 10px;
}
.my-userinfo-container {
  height: 100%;
  background-color: #f4f4f4;
}
.my-userinfo-container .top-box {
  height: 300rpx;
  border-top: 10rpx solid #f4f4f4;
  background-color: #fff;
  display: flex;
  flex: 2;
}
.my-userinfo-container .top-box .avatar {
  width: 90px;
  height: 90px;
  border-radius: 45px;
  border: 2px solid white;
  box-shadow: 0 1px 5px black;
  margin-top: 50rpx;
}
.my-userinfo-container .top-box .nickname {
  color: #65a29f;
  font-weight: bolder;
  font-size: 80rpx;
  margin-top: 80rpx;
  margin-left: 50rpx;
}
